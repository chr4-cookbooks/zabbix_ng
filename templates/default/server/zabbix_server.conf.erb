#
# Generated by Chef for <%= node['fqdn'] %>.
# Local modifications will be overwritten.
#

LogFile=<%= @logfile %>
PidFile=<%= @pidfile %>
DBHost=<%= @db_host %>
DBName=<%= @db_name %>
DBUser=<%= @db_user %>
<% if @db_password %>
DBPassword=<%= @db_password %>
<% end -%>

StartPollers=5
StartIPMIPollers=0
StartPollersUnreachable=1
StartTrappers=1
StartPingers=1
StartDiscoverers=1

HousekeepingFrequency=1
SenderFrequency=30
CacheSize=32M
Timeout=30
UnreachablePeriod=300

# Manually set fping path, Ubuntu doesn't place them in /usr/sbin
FpingLocation=/usr/bin/fping
Fping6Location=/usr/bin/fping6

# Other default settings for Ubuntu
LogFileSize=0
AlertScriptsPath=/usr/lib/zabbix/alertscripts
ExternalScripts=/usr/lib/zabbix/externalscripts
LogSlowQueries=3000
